<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="estoqueTecFour">
        <description></description>
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        
        <class>br.com.projeto.estoque.model.Grupo</class>
        <class>br.com.projeto.estoque.model.Produto</class>
        <class>br.com.projeto.estoque.model.Categoria</class>
		<class>br.com.projeto.estoque.model.Fornecedor</class>
		<class>br.com.projeto.estoque.model.Gerente</class>
		<class>br.com.projeto.estoque.model.Movimentacao</class>
		<class>br.com.projeto.estoque.model.Registro</class>
		
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/estoquetecfour?serverTimezone=GMT-3" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="root" />

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect	" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true"/>
        </properties>

    </persistence-unit>

</persistence>